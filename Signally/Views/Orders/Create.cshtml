@model Signally.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CSR" class="control-label"></label>
                <select asp-for="@Model.order.CSRId" class ="form-control" asp-items="@Model.CSR"></select>
            </div>
            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <select asp-for="@Model.order.CustomerId" class ="form-control" asp-items="@Model.Customer"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="@Model.order.StatusId" class ="form-control" asp-items="@Model.Status"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="@Model.order.Rush" /> @Html.DisplayNameFor(model => model.order.Rush)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="@Model.order.Install" /> @Html.DisplayNameFor(model => model.order.Install)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.order.Price" class="control-label"></label>
                <input asp-for="@Model.order.Price" class="form-control" />
                <span asp-validation-for="@Model.order.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
